{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "test/controller/*.ts",
    "test/spec/**/*.test.ts"
  ],
  "typeRoots": [
    "./typing-stubs",
    "./custom_typings",
    "./node_modules/@types"
  ],
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs"
  }
}
